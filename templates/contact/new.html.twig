{% extends 'base.html.twig' %}

{% block title %}New Contact{% endblock %}

{% block stylesheets %}
<style>
    /* Adjustments for Contact Form */

.login-container {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Chia layout thành hai cột */
    gap: 20px;
    height: 100vh;
}

.login-form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
    height: 100%; /* Sử dụng chiều cao 100% của parent container */
}

.login-form .form-control {
    width: 300px;
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.login-title {
    text-align: center;
    margin-bottom: 20px;
}

.create {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

/* Adjustments for the map container */
.login-map-container {
    width: 100%;
    height: 100%; /* Sử dụng chiều cao 100% của parent container */
}

/* Responsive design for the map */
.login-map-container iframe {
    width: 80%;
    height: 70%; /* Sử dụng chiều cao 100% của parent container */
    border: 0;
}

/* Sử dụng media query để thay đổi layout trên các thiết bị di động */
@media (max-width: 768px) {
    .login-container {
        grid-template-columns: 1fr; /* Trên các thiết bị di động, chuyển sang một cột */
    }
}
</style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.6557593048824!2d106.61048307480581!3d10.837634089314909!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752a33351a68a7%3A0xf5072deef0776b95!2zMTAxIFTDom4gVGjhu5tpIE5o4bqldCA1LCBUw6JuIFRo4bubaSBOaOG6pXQsIFF14bqtbiAxMiwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaWV0bmFt!5e0!3m2!1sen!2sus!4v1712062786000!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="login-form">
            <h1 class="login-title">Contact</h1>
            {{ form_start(form) }}
            {{ form_row(form.first_name, { 'attr': {'class': 'form-control'} }) }}
            {{ form_row(form.last_name, { 'attr': {'class': 'form-control'} }) }}
            {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
            {{ form_row(form.phone_number, { 'attr': {'class': 'form-control'} }) }}
            {{ form_row(form.title_name, { 'attr': {'class': 'form-control'} }) }}
            {{ form_row(form.note, { 'attr': {'class': 'form-control', 'rows': 5} }) }}
            <div class="create">
                <button class="btn btn-primary btn-block" type="submit">Send</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
