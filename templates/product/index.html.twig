{% extends 'base_admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<style>
    .cart-item-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-right: 20px;
    }
    .btn-center {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .table {
        margin-top: 20px;
        width: 100%;
        border-collapse: collapse;
    }
    .table th,
    .table td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
    }
    .table th {
        background-color: #f2f2f2;
    }
    .no-records {
        text-align: center;
        padding: 20px;
        font-style: italic;
        color: #888;
    }
    .create-btn {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .create-btn a {
        padding: 10px 20px;
        background-color: #4caf50;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
    }

    /* Additional CSS for Show and Edit buttons */

.show-btn,
.edit-btn {
    padding: 6px 12px; /* Adjust padding as needed */
    background-color: #4caf50; /* Green color */
    color: #fff; /* White text color */
    text-decoration: none;
    border-radius: 4px;
    margin-right: 5px; /* Add some margin between buttons */
}

.show-btn:hover,
.edit-btn:hover {
    background-color: #45a049; /* Darker shade of green on hover */
}

</style>
<div class="btn-center">
    <h1>Product Management</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th style="background-color:green;">Id</th>
            <th style="background-color:green;">Title</th>
            <th style="background-color:green;">Price</th>
            <th style="background-color:green;">Image</th>
            <th style="background-color:green;">Description</th>
            <th style="background-color:green;">Action</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.title }}</td>
            <td>{{ product.price }}.000.000.VND</td>
            <td><img src="{{ asset('image/' ~ product.image) }}" class="cart-item-image" alt="{{ product.title }}"></td>
            <td>{{ product.description }}</td>
            <td>
                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="show-btn">show</a>
                <br>
                <br>
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="edit-btn">edit</a>
            </td>   

        </tr>
    {% else %}
        <tr>
            <td colspan="6" class="no-records">No records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="create-btn">
    <a href="{{ path('app_product_new') }}" class="btn btn-success">Create new</a>
</div>
{% endblock %}
